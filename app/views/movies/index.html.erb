<section class="row index-searches gutter-10">
  <div class="col-lg-3">
    <%= link_to "Submit a new movie!", new_movie_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="col-lg-9">
    <%= form_tag("/movies", method: "get", class: "navbar-form") do %>
      <div class="form-group">
        <%= label_tag :search, "Search", class: "form-label"  %>
        <%= text_field_tag :search, 'Director/Title here', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :runtime_in_minutes, "Runtime", class: "form-label"  %>
        <%= select_tag(:runtime_in_minutes, options_for_select([['Under 90 minutes', 1],['90-120 minutes', 2],['Over 120 minutes', 3]], 3), class: "form-control") %>
      </div>
      <%= submit_tag "Search", class: "btn btn-default" %>
    <% end %>
  </div>
</section>
<br>


  <% @movies.each do |movie| %>
  <section class="row gutter-10">
    <div class="col-lg-3">
      <%= link_to image_tag(movie.poster.small), movie_path(movie) %>
    </div>
    <div class="col-lg-9">
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <h3><%= formatted_date(movie.release_date) %></h3>
      <h4>Dir. <%=  movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
      <h4> <%= movie.review_average %>/10 </h4>
      <div class="row">
        <div class="col-lg-9" id="inner-col">
         <p><%= movie.description %></p>
        </div>
      </div>
    </div>
  </section>
    <hr>
  <% end %>



